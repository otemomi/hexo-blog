// Fonts
$font-family-body = "-apple-system","BlinkMacSystemFont","Helvetica Neue","游ゴシック Medium","YuGothic","YuGothicM","Hiragino Kaku Gothic ProN","メイリオ","Meiryo",sans-serif
$font-family-mono = "Quicksand","-apple-system","BlinkMacSystemFont","Helvetica Neue","游ゴシック Medium","YuGothic","YuGothicM","Hiragino Kaku Gothic ProN","メイリオ","Meiryo",sans-serif
$font-family-tt = "Quicksand", sans-serif;
$font-size = 16px
$line-height = 1.725
$page-width = 0rem + (hexo-config("page_width") || 39)
// Logo
$logo-width = 0px + (hexo-config("logo.width") || 0)
